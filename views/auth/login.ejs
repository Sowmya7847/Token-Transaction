<%- include('../partials/header', { title: title }) %>

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-coin fs-1 text-primary"></i>
                    <h2 class="mt-3">Login</h2>
                    <p class="text-muted">Access your token account</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>

                <form action="/login" method="POST" id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">
                            Email Address
                            <i class="bi bi-question-circle help-icon" data-bs-toggle="tooltip" title="Enter the email address you used to register"></i>
                        </label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="your.email@example.com" required autofocus>
                        <div class="form-help-text">Enter your registered email address</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">
                            Password
                            <i class="bi bi-question-circle help-icon" data-bs-toggle="tooltip" title="Enter your account password"></i>
                        </label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                        <div class="form-help-text">Minimum 6 characters</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </form>

                <div class="text-center">
                    <p class="mb-0">Don't have an account? <a href="/register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

