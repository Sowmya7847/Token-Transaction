<%- include('../partials/header', { title: title }) %>

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus fs-1 text-primary"></i>
                    <h2 class="mt-3">Register</h2>
                    <p class="text-muted">Create a new account</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>

                <div class="info-badge mb-3">
                    <i class="bi bi-info-circle"></i> <strong>New User?</strong> Create an account to start managing tokens. It only takes a minute!
                </div>
                
                <form action="/register" method="POST" id="registerForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">
                            Full Name
                            <i class="bi bi-question-circle help-icon" data-bs-toggle="tooltip" title="Enter your full name"></i>
                        </label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
                        <div class="form-help-text">This will be displayed on your profile</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">
                            Email Address
                            <i class="bi bi-question-circle help-icon" data-bs-toggle="tooltip" title="Enter a valid email address for your account"></i>
                        </label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="your.email@example.com" required>
                        <div class="form-help-text">You'll use this email to login</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">
                            Password
                            <i class="bi bi-question-circle help-icon" data-bs-toggle="tooltip" title="Create a strong password (at least 6 characters)"></i>
                        </label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Create a password" required minlength="6">
                        <div class="form-help-text">Minimum 6 characters. Choose a strong password for security.</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-person-plus"></i> Create Account
                    </button>
                </form>

                <div class="text-center">
                    <p class="mb-0">Already have an account? <a href="/login">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

