    <script>
        // Ensure help function is available globally
        function showHelpForCurrentPage() {
            const path = window.location.pathname;
            let page = 'dashboard';
            if (path.includes('/tokens')) page = 'tokens';
            else if (path.includes('/transactions')) page = 'transactions';
            else if (path.includes('/reports')) page = 'reports';
            else if (path.includes('/admin')) page = 'admin';
            else if (path.includes('/contact')) page = 'contact';
            
            if (typeof showHelp === 'function') {
                showHelp(page);
            } else {
                // Fallback if help system not loaded
                alert('Help system is loading. Please try again in a moment.');
            }
        }
        
